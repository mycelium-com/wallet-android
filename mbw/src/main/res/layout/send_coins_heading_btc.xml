<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/send_coins_activity">

    <data>

        <import type="android.view.View" />

        <variable
            name="activity"
            type="com.mycelium.wallet.activity.send.SendCoinsActivity" />

        <variable
            name="viewModel"
            type="com.mycelium.wallet.activity.send.model.SendBtcViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:orientation="vertical">

        <include
            layout="@layout/send_coins_heading_title"
            bind:viewModel="@{viewModel}" />

        <!-- Enter Recipient -->
        <include
            layout="@layout/send_coins_enter_recepient"
            bind:viewModel="@{viewModel}"
            bind:activity="@{activity}" />

        <!-- Recipient Address Box -->
        <include
            layout="@layout/send_coins_recipient_btc"
            bind:viewModel="@{viewModel}"
            bind:activity="@{activity}" />
    </LinearLayout>

</layout>