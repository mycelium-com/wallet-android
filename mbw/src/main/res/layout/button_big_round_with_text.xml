<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.mycelium.wallet.activity.view.RoundButton
        android:id="@+id/roundButton"
        android:layout_width="@dimen/BigRoundButton_diameter"
        android:layout_height="@dimen/BigRoundButton_diameter"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:src="@drawable/wallet_scan_icon"
        custom:backgroundColor="@color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:text="SCAN"
        android:textColor="@color/new_btn_text_color"
        android:textSize="14sp" />
</LinearLayout>