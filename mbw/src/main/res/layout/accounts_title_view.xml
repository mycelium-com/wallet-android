<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="2dp"
    android:layoutDirection="ltr"
    android:paddingEnd="2dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:src="@drawable/ic_expand_more_white_24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/GenericText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textSize="23sp"
            tools:text="My HD Accounts" />

        <TextView
            android:id="@+id/tvAccountsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:lines="1"
            android:textSize="16sp"
            tools:text="(1)" />

        <ImageView
            android:id="@+id/lastSyncState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:layout_gravity="center"
            custom:srcCompat="@drawable/ic_warning"
            tools:visibility="visible" />
    </LinearLayout>

    <com.mycelium.wallet.activity.util.ToggleableCurrencyButton
        android:id="@+id/tvBalance"
        style="@style/GenericText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        custom:textSize="15sp" />
</LinearLayout>