<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/background_send_activity_boxes"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tvRecipientTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipient_title"
                android:textSize="28sp"
                android:layout_marginBottom="12dp"
                android:textColor="#888888"
                android:layout_gravity="center|top"
                />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center" >

                <!-- Enter Recipient -->

                <LinearLayout
                    android:id="@+id/llEnterRecipient"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <!-- Receiver -->

                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp" />

                    <!-- Scan button -->

                    <Button
                        android:id="@+id/btScan"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/scan_qr_code"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp" />

                    <!-- Address Book -->

                    <Button
                        android:id="@+id/btAddressBook"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/address_book"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp" />

                    <!-- Clipboard -->

                    <Button
                        android:id="@+id/btClipboard"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/clipboard"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp" />

                    <!-- Manual Entry -->

                    <Button
                        android:id="@+id/btManualEntry"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/manual_entry"
                        android:textSize="20sp" />
                </LinearLayout>

                <!-- Recipient Address Box -->

                <LinearLayout
                    android:id="@+id/llRecipientAddress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <!-- Receiver Label -->

                    <TextView
                        android:id="@+id/tvReceiverLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        android:textSize="20sp"
                        android:visibility="gone"
                        android:layout_marginBottom="5dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <!-- Receiver Address -->

                        <TextView
                            android:id="@+id/tvReceiver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="@string/receiver_address_hint"
                            android:textColor="@color/white"
                            android:textColorHint="@color/darkgrey"
                            android:textSize="20sp"
                            android:typeface="monospace"
                            android:background="@drawable/background_send_activity_amount_and_address"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <!-- Warning Message -->

        <TextView
            android:id="@+id/tvWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="@string/read_only_warning"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:paddingBottom="12dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/background_send_activity_boxes"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <!-- Amount Title -->

            <TextView
                android:id="@+id/tvAmountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount_title"
                android:textSize="28sp"
                android:layout_marginBottom="12dp"
                android:textColor="#888888"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/llAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">

                    <!-- Amount -->

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:hint="@string/amount_hint_denomination"
                        android:textColor="@color/white"
                        android:textColorHint="#444444"
                        android:textSize="25sp"
                        android:background="@drawable/background_send_activity_amount_and_address"
                        android:layout_marginBottom="4dp"/>

                    <!-- Fiat Amount -->

                    <TextView
                        android:id="@+id/tvAmountFiat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginBottom="10dp"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="20dp"
                    android:layout_height="1dp" >
                </View>

                <!-- Enter Amount button -->

                <ImageButton
                    android:id="@+id/btEnterAmount"
                    style="@style/MyceliumSlimButton"
                    android:layout_width="75dp"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/llAmount"
                    android:layout_alignTop="@+id/llAmount"
                    android:contentDescription="@string/an_icon"
                    android:scaleType="fitCenter"
                    android:src="@drawable/keyboard_icon"
                    android:layout_alignParentRight="false"/>

                <!-- Amount Error -->

                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llAmount"
                    android:layout_alignLeft="@+id/llAmount"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"/>

                <!-- Fee -->

                <LinearLayout
                    android:id="@+id/llFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/tvError"
                    android:layout_alignLeft="@+id/tvError" >

                    <!-- Fee Title -->

                    <TextView
                        android:id="@+id/tvFeeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/miner_fee_title"
                        android:textSize="20sp"
                        android:layout_gravity="left" />

                    <!-- Fee Amount -->

                    <TextView
                        android:id="@+id/tvFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:layout_gravity="left"/>

                    <!-- Fiat Fee -->

                    <TextView
                        android:id="@+id/tvFeeFiat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <!-- Send -->

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="0dp" >

            <Button
                android:id="@+id/btSend"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/send"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/pbSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

</ScrollView>